{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Paths for shared types */
    "baseUrl": ".", // Set baseUrl to current directory
    "paths": {
      "@shared/*": ["../shared/*"] // Path to the shared folder
    }
  },
  "include": ["vite.config.ts"] // Include only vite config for Node-specific logic
}
